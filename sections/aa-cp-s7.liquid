{%- assign aa_section_id = section.id | split: '__' -%}
{%- assign aa_section_id = aa_section_id[1] -%}
{%- assign aa_section_id = aa_section_id | replace: '-', '_' -%}

<style>
  #shopify-section-{{ section.id }} .aa-cp-s7 {
    position: relative;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
    background-color: #000;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-head {
    line-height: 1;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-head .aa-heading {
    font-size: {{ section.settings.heading_size }};
    font-weight: 700;
    text-transform: uppercase;
    color: inherit;
    padding: 20px 0;
    {%- if section.settings.heading_bgimg != blank -%}
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-font-smoothing: antialiased;
    background-image: url('{{ section.settings.heading_bgimg | img_url: 'master' }}');
    background-size: 100% 100%;
    color: transparent;
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content .aa-info {
     line-height: 1.4;
     font-size: {{ section.settings.info_size }};
     color: inherit;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-item .aa-lt,
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-item .aa-rt {
    position: relative;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-button {
    text-align: left;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-button a {
    display: inline-block;
    padding: 15px 30px;
    margin-top: 15px;
    font-size: {{ section.settings.button_size }};
    font-weight: 700;
    color: inherit;
    background-color: #9921CF;
    text-decoration: none;
  }
  #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content .aa-image {
    position: relative;
  }

  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-head {
      max-width: 950px;
      padding: 0 40px 100px 40px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-head .aa-heading {
      padding-bottom: 60px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-wrap {
      padding: 150px 0;
      {%- if section.settings.bgimg != blank -%}
      background-image: url({{ section.settings.bgimg | img_url: 'master' }});
      background-attachment: fixed;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content {
      display: flex;
      justify-content: space-between;
      flex-direction: row;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-lt {
      width: 50%;
      text-align: right;
      padding-right: 60px;
      padding-top: 160px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-rt {
      width: 50%;
    }
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-wrap {
      padding: 60px 0;
      {%- if section.settings.bgimg_mobile != blank -%}
      background-image: url({{ section.settings.bgimg_mobile | img_url: 'master' }});
      background-size: contain;
      background-repeat: no-repeat;
      background-position: top;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content {
      padding: 0 25px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-head .aa-heading {
      font-size: {{ section.settings.heading_size_mobile }};
      padding: 0 0 30px 0;
      {%- if section.settings.heading_bgimg_mobile != blank -%}
      background-image: url('{{ section.settings.heading_bgimg_mobile | img_url: 'master' }}');
      background-size: 100% 100%;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content .aa-info {
      font-size: {{ section.settings.info_size_mobile }};
      margin-bottom: 30px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-content .aa-image {
      margin-bottom: 20px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s7 .aa-button a {
      margin-bottom: 30px;
      margin-top: 0;
      font-size: {{ section.settings.button_size_mobile }};
    }
   }
</style>

<div class="aa-section aa-cp-s7">
  <div class="aa-relative">
    <div class="aa-wrap">
      <div class="aa-desktop">
        <div class="aa-content">
          <div class="aa-lt">
            <div class="aa-image">
              {%- if section.settings.image_1_link != blank -%}
                <a class="aa-link-mask" href="{{ section.settings.image_1_link }}"></a>
              {%- endif -%}
              {%- if section.settings.image_1 != blank -%}
                <img src="{{ section.settings.image_1 | img_url: 'master' }}">
              {%- endif -%}
            </div>
          </div>
          <div class="aa-rt">
            <div class="aa-head">
              {%- if section.settings.heading != blank -%}
                <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
              {%- endif -%}
              {%- if section.settings.info != blank -%}
                <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
              {%- endif -%}
              {%- if section.settings.show_button and section.settings.button != blank and section.settings.link != blank -%}
              <div class="aa-button" {{ settings.item_animate }}>
                <a href="{{ section.settings.link }}">{{ section.settings.button | escape }}</a>
              </div>
          {%- endif -%}
            </div>
            <div class="aa-image">
              {%- if section.settings.image_2_link != blank -%}
                <a class="aa-link-mask" href="{{ section.settings.image_2_link }}"></a>
              {%- endif -%}
              {%- if section.settings.image_2 != blank -%}
                <img src="{{ section.settings.image_2 | img_url: 'master' }}">
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
      <div class="aa-mobile">
        <div class="aa-content">
          <div class="aa-head">
            {%- if section.settings.heading != blank -%}
              <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
            {%- endif -%}
            {%- if section.settings.info != blank -%}
              <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
            {%- endif -%}
            {%- if section.settings.show_button and section.settings.button != blank and section.settings.link != blank -%}
              <div class="aa-button" {{ settings.item_animate }}>
                <a href="{{ section.settings.link }}">{{ section.settings.button | escape }}</a>
              </div>
          {%- endif -%}
          </div>
          <div class="aa-image">
            {%- if section.settings.image_1_link != blank -%}
              <a class="aa-link-mask" href="{{ section.settings.image_1_link }}"></a>
            {%- endif -%}
            {%- if section.settings.image_1_mobile != blank -%}
              <img class="aa-parallax-scroll" src="{{ section.settings.image_1_mobile | img_url: 'master' }}">
            {%- endif -%}
          </div>
          <div class="aa-image">
            {%- if section.settings.image_2_link != blank -%}
              <a class="aa-link-mask" href="{{ section.settings.image_2_link }}"></a>
            {%- endif -%}
            {%- if section.settings.image_2_mobile != blank -%}
              <img class="aa-parallax-scroll" src="{{ section.settings.image_2_mobile | img_url: 'master' }}">
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
var parallaxImg_{{ aa_section_id }} = document.getElementsByClassName('aa-parallax-scroll');
new simpleParallax(parallaxImg_{{ aa_section_id }}, {
  scale: 1.3
});
</script>

