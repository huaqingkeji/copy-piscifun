<style>
  #shopify-section-{{ section.id }} .aa-cp-s4 {
    position: relative;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
    background-color: #000;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} .aa-cp-s4 .aa-wrap {
    position: absolute;
    left: 0;
    z-index: 2;
    width: 100%;
  }
  #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head {
    text-align: center;
    line-height: 1;
  }
  #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-heading {
    font-size: {{ section.settings.heading_size }};
    font-weight: 700;
    text-transform: uppercase;
    color: inherit;
    padding: 20px 0;
    {%- if section.settings.heading_bgimg != blank -%}
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-font-smoothing: antialiased;
    background-image: url('{{ section.settings.heading_bgimg | img_url: 'master' }}');
    background-size: 100% 100%;
    color: transparent;
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-subheading {
     font-size: {{ section.settings.subheading_size }};
     font-weight: 500;
     color: inherit;
   }
  #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-info {
     line-height: 1.4;
     font-size: {{ section.settings.info_size }};
     color: inherit;
   }
  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-wrap {
      top: 60px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-content {
      display: flex;
      justify-content: flex-start;
      flex-direction: column;
      align-items: flex-start;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-info {
      padding: 0 100px;
    }
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-wrap {
      bottom: 0;
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head {
      padding: 0 30px 30px 30px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-heading {
      font-size: {{ section.settings.heading_size_mobile }};
      padding: 30px;
      {%- if section.settings.heading_bgimg_mobile != blank -%}
      background-image: url('{{ section.settings.heading_bgimg_mobile | img_url: 'master' }}');
      background-size: 100% 100%;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-subheading {
      font-size: {{ section.settings.subheading_size_mobile }};
    }
    #shopify-section-{{ section.id }} .aa-cp-s4 .aa-head .aa-info {
      font-size: {{ section.settings.info_size_mobile }};
    }
   }
</style>

<div class="aa-section aa-cp-s4 aa-w1920">
  <div class="aa-desktop aa-relative">
    {%- if section.settings.bgimg != blank -%}
      <div class="aa-bgimg">
        <img src="{{ section.settings.bgimg | img_url: 'master' }}">
      </div>
    {%- endif -%}
    <div class="aa-wrap">
      <div class="aa-content">
        <div class="aa-head">
          {%- if section.settings.subheading != blank -%}
            <div class="aa-subheading" {{ settings.item_animate }}>{{ section.settings.subheading | escape }}</div>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
          {%- endif -%}
          {%- if section.settings.info != blank -%}
            <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
          {%- endif -%}
        </div>
        {%- if section.settings.image != blank -%}
          <div class="aa-image">
            <img src="{{ section.settings.image | img_url: 'master' }}">
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="aa-mobile aa-relative">
    {%- if section.settings.bgimg_mobile != blank -%}
      <div class="aa-bgimg">
        <img src="{{ section.settings.bgimg_mobile | img_url: 'master' }}">
      </div>
    {%- endif -%}
    <div class="aa-wrap">
      <div class="aa-content">
        {%- if section.settings.image_mobile != blank -%}
          <div class="aa-image">
            <img src="{{ section.settings.image_mobile | img_url: 'master' }}">
          </div>
        {%- endif -%}
        <div class="aa-head">
          {%- if section.settings.heading != blank -%}
            <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
          {%- endif -%}
          {%- if section.settings.info != blank -%}
            <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
          {%- endif -%}
          {%- if section.settings.subheading != blank -%}
            <div class="aa-subheading" {{ settings.item_animate }}>{{ section.settings.subheading | escape }}</div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

