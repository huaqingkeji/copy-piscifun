<style>
  #shopify-section-{{ section.id }} .aa-cp-s3 {
    position: relative;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
    background-color: #000;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head {
    text-align: left;
    line-height: 1;
  }
  #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head .aa-heading {
    font-size: {{ section.settings.heading_size }};
    font-weight: 700;
    text-transform: uppercase;
    color: inherit;
    padding: 20px 0;
    {%- if section.settings.heading_bgimg != blank -%}
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-font-smoothing: antialiased;
    background-image: url('{{ section.settings.heading_bgimg | img_url: 'master' }}');
    background-size: 100% 100%;
    color: transparent;
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head .aa-info {
     line-height: 1.4;
     font-size: {{ section.settings.info_size }};
     color: inherit;
   }
  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .aa-cp-s3 {
      padding: 150px 0;
      {%- if section.settings.bgimg != blank -%}
      background-image: url({{ section.settings.bgimg | img_url: "master" }});
      {%- endif -%}
      background-attachment: fixed;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
   }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-wrap {
      display: flex;
      justify-content: space-between;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
   }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head {
      width: {{ section.settings.heading_width }};
      text-align: left;
      line-height: 1;
    }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-content {
      display: flex;
      justify-content: flex-start;
      flex-direction: column;
      align-items: flex-start;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-wrap {
      position: relative;
    }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-content {
      position: absolute;
      left: 0;
      bottom: 0;
      z-index: 2;
      width: 100%;
      padding: 0 25px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head .aa-heading {
      width: {{ section.settings.heading_width_mobile }};
      font-size: {{ section.settings.heading_size_mobile }};
      {%- if section.settings.heading_bgimg_mobile != blank -%}
      background-image: url('{{ section.settings.heading_bgimg_mobile | img_url: 'master' }}');
      background-size: 100% 100%;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s3 .aa-head .aa-info {
      font-size: {{ section.settings.info_size_mobile }};
    }
   }
</style>

<div class="aa-section aa-cp-s3">
  <div class="aa-relative">
    <div class="aa-desktop">
      <div class="aa-wrap">
        <div class="aa-lt">
          <div class="aa-content">
            <div class="aa-head">
              {%- if section.settings.heading != blank -%}
                <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
              {%- endif -%}
              {%- if section.settings.info != blank -%}
                <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
              {%- endif -%}
            </div>
          </div>
        </div>
        <div class="aa-rt">
          {%- if section.settings.image != blank -%}
            <div class="aa-image">
              <img src="{{ section.settings.image | img_url: 'master' }}">
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>

    <div class="aa-mobile">
      <div class="aa-wrap">
        {%- if section.settings.bgimg_mobile != blank -%}
          <div class="aa-image">
            <img src="{{ section.settings.bgimg_mobile | img_url: 'master' }}">
          </div>
        {%- endif -%}
        <div class="aa-content">
          <div class="aa-head">
            {%- if section.settings.heading != blank -%}
              <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
            {%- endif -%}
            {%- if section.settings.info != blank -%}
              <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "AA CP S3-1",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "bgimg",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "bgimg_mobile",
      "label": "Background image (mobile)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "heading_size",
      "label": "Heading size",
      "default": "70px"
    },
    {
      "type": "text",
      "id": "heading_size_mobile",
      "label": "Heading size (mobile)",
      "default": "27px"
    },
    {
      "type": "text",
      "id": "heading_width",
      "label": "Heading width",
      "default": "650px"
    },
    {
      "type": "text",
      "id": "heading_width_mobile",
      "label": "Heading width (mobile)",
      "default": "50%"
    },
    {
      "type": "image_picker",
      "id": "heading_bgimg",
      "label": "Heading background image"
    },
    {
      "type": "image_picker",
      "id": "heading_bgimg_mobile",
      "label": "Heading background image (mobile)"
    },
    {
      "type": "richtext",
      "id": "info",
      "label": "Info"
    },
    {
      "type": "text",
      "id": "info_size",
      "label": "Info size",
      "default": "26px"
    },
    {
      "type": "text",
      "id": "info_size_mobile",
      "label": "Info size (mobile)",
      "default": "14px"
    }
  ],
  "presets": [
    {
      "name": "AA CP S3-1"
    }
  ]
}
{% endschema %}
