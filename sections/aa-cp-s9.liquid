{%- assign aa_section_id = section.id | split: '__' -%}
{%- assign aa_section_id = aa_section_id[1] -%}
{%- assign aa_section_id = aa_section_id | replace: '-', '_' -%}

<style>
  #shopify-section-{{ section.id }} .aa-cp-s9 {
    position: relative;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
    background-color: #000;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item {
    position: relative;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-head {
    line-height: 1;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-heading {
    font-size: 70px;
    font-weight: 700;
    text-transform: uppercase;
    color: inherit;
    padding: 20px 0;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-info {
     line-height: 1.4;
     font-size: 26px;
     color: inherit;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-lt,
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-rt {
    position: relative;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-button {
    text-align: left;
  }
  #shopify-section-{{ section.id }} .aa-cp-s9 .aa-button a {
    display: inline-block;
    padding: 15px 30px;
    margin-top: 15px;
    font-size: {{ section.settings.button_size }};
    font-weight: 700;
    color: inherit;
    background-color: #9921CF;
    text-decoration: none;
  }


  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-wrap {
      padding: 200px 0;
      {%- if section.settings.bgimg != blank -%}
      background-image: url({{ section.settings.bgimg | img_url: 'master' }});
      background-attachment: fixed;
      background-size: cover;
      background-position: center;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items .aa-item {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 60px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:nth-child(odd) .aa-item {
      flex-direction: row;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:nth-child(even) .aa-item {
      flex-direction: row-reverse;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-1 .aa-head {
      max-width: 750px;
      padding: 0 40px 100px 40px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-2 .aa-head {
      padding-right: 150px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-heading {
      padding-bottom: 60px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-lt,
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-rt {
      width: 50%;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:nth-child(even) .aa-item .aa-lt {
      text-align: left;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:nth-child(odd) .aa-item .aa-lt {
      text-align: right;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:nth-child(even) .aa-rt .aa-head {
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-wrap {
      padding: 60px 0;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items {
      padding: 0 25px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-items .aa-item {
      display: flex;
      justify-content: center;
      flex-direction: column-reverse;
      margin-bottom: 20px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-heading {
      font-size: 27px;
      padding: 0 0 30px 0;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-info {
      font-size: 14px;
      margin-bottom: 30px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item .aa-lt {
      position: relative;
      overflow: hidden;
      width: 100%;
    }
    #shopify-section-{{ section.id }} .aa-cp-s9 .aa-button a {
      margin-bottom: 30px;
      margin-top: 0;
      font-size: {{ section.settings.button_size_mobile }};
    }
   }
</style>

<div class="aa-section aa-cp-s9">
  <div class="aa-relative">
    <div class="aa-wrap">
      {%- for block in section.blocks -%}
        <div class="aa-items">
          {%- if block.type == 'block' -%}
            <style>
              #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-{{ forloop.index }} .aa-heading {
                {%- if block.settings.heading_bgimg != blank -%}
                background-clip: text;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                -webkit-font-smoothing: antialiased;
                background-image: url('{{ block.settings.heading_bgimg | img_url: 'master' }}');
                background-size: 100% 100%;
                color: transparent;
                {%- endif -%}
                font-size: {{ block.settings.heading_size }};
              }
              #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-{{ forloop.index }} .aa-info {
                font-size: {{ block.settings.info_size }};
              }

              @media screen and (max-width: 767px) {
                #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-{{ forloop.index }} .aa-heading {
                  {%- if block.settings.heading_bgimg_mobile != blank -%}
                  background-image: url('{{ block.settings.heading_bgimg_mobile | img_url: 'master' }}');
                  {%- endif -%}
                  font-size: {{ block.settings.heading_size_mobile }};
                }
                #shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-{{ forloop.index }} .aa-info {
                  font-size: {{ block.settings.info_size_mobile }};
                }
              }
            </style>
            <div class="aa-item aa-item-{{ forloop.index }}">
              <div class="aa-lt">
                {%- if block.settings.link != blank -%}
                  <a class="aa-link-mask" href="{{ block.settings.link }}"></a>
                {%- endif -%}
                {%- if block.settings.image != blank -%}
                  <img class="aa-desktop" src="{{ block.settings.image | img_url: 'master' }}">
                {%- endif -%}
                {%- if block.settings.image_mobile != blank -%}
                  <img class="aa-mobile aa-parallax-scroll" src="{{ block.settings.image_mobile | img_url: 'master' }}">
                {%- endif -%}
              </div>
              <div class="aa-rt">
                <div class="aa-head">
                  {%- if block.settings.heading != blank -%}
                    <div class="aa-heading" {{ settings.item_animate }}>{{ block.settings.heading | escape }}</div>
                  {%- endif -%}
                  {%- if block.settings.info != blank -%}
                    <div class="aa-info" {{ settings.item_animate }}>{{ block.settings.info }}</div>
                  {%- endif -%}
            {%- if section.settings.show_button and section.settings.button != blank and block.settings.link != blank -%}
              <div class="aa-button" {{ settings.item_animate }}>
                <a href="{{ block.settings.link }}">{{ section.settings.button | escape }}</a>
              </div>
          {%- endif -%}
                </div>
              </div>
            </div>
          {%- endif -%}

          {%- if block.type == 'image' -%}
            <div class="aa-item">
              {%- if block.settings.link != blank -%}
                  <a class="aa-link-mask" href="{{ block.settings.link }}"></a>
                {%- endif -%}
              {%- if block.settings.image != blank -%}
                <img class="aa-desktop" src="{{ block.settings.image | img_url: 'master' }}">
              {%- endif -%}
              {%- if block.settings.image_mobile != blank -%}
                <img class="aa-mobile aa-parallax-scroll" src="{{ block.settings.image_mobile | img_url: 'master' }}">
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
var parallaxImg_{{ aa_section_id }} = document.getElementsByClassName('aa-parallax-scroll');
new simpleParallax(parallaxImg_{{ aa_section_id }}, {
  scale: 1.3
});

(function($) {
  $(window).on("load resize", function() {
    var pos_lastitem_{{ aa_section_id }} = $('#shopify-section-{{ section.id }} .aa-cp-s9 .aa-items:last-child img').position();
    if (pos_lastitem_{{ aa_section_id }}.left > 0) {
      $('#shopify-section-{{ section.id }} .aa-cp-s9 .aa-item-2 .aa-head').css('padding-left', pos_lastitem_{{ aa_section_id }}.left);
    }
  });
})(jQuery);
</script>

