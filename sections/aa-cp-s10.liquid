<style>
  #shopify-section-{{ section.id }} .aa-cp-s10 {
    position: relative;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
    background-color: #000;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head {
    line-height: 1;
  }
  #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head .aa-heading {
    font-size: {{ section.settings.heading_size }};
    font-weight: 700;
    text-transform: uppercase;
    color: inherit;
    padding: 20px 0;
  }
  #shopify-section-{{ section.id }} .aa-cp-s10 .aa-content .aa-info {
     line-height: 1.4;
     font-size: {{ section.settings.info_size }};
     color: inherit;
  }


  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .aa-cp-s10 {
      color: #000;
      {%- if section.settings.image != blank -%}
      background-image: url({{ section.settings.image | img_url: 'master' }});
      background-size: cover;
      background-repeat: no-repeat;
      background-position: top;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head {
      max-width: 30%;
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head .aa-heading {
      padding-bottom: 60px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-wrap {
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      padding: 50px 0;
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-wrap .aa-content {
      width: 100%;
    }
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-wrap {
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head {
      padding: 0 30px;
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-head .aa-heading {
      font-size: {{ section.settings.heading_size_mobile }};
      padding: 0 0 30px 0;
      {%- if section.settings.heading_bgimg_mobile != blank -%}
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      -webkit-font-smoothing: antialiased;
      background-image: url('{{ section.settings.heading_bgimg_mobile | img_url: 'master' }}');
      background-size: 100% 100%;
      color: transparent;
      {%- endif -%}
    }
    #shopify-section-{{ section.id }} .aa-cp-s10 .aa-content .aa-info {
      font-size: {{ section.settings.info_size_mobile }};
      margin-bottom: 30px;
    }
   }
</style>

<div class="aa-section aa-cp-s10">
  <div class="aa-relative">
    <div class="aa-wrap">
      <div class="aa-desktop">
        <div class="aa-content">
          <div class="aa-head">
            {%- if section.settings.heading != blank -%}
              <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
            {%- endif -%}
            {%- if section.settings.info != blank -%}
              <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
      <div class="aa-mobile">
        <div class="aa-content">
          <div class="aa-head">
            {%- if section.settings.heading != blank -%}
              <div class="aa-heading" {{ settings.item_animate }}>{{ section.settings.heading | escape }}</div>
            {%- endif -%}
            {%- if section.settings.info != blank -%}
              <div class="aa-info" {{ settings.item_animate }}>{{ section.settings.info }}</div>
            {%- endif -%}
          </div>
          {%- if section.settings.image_mobile != blank -%}
            <div class="aa-image">
              <img src="{{ section.settings.image_mobile | img_url: 'master' }}">
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "AA CP S10",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "heading_size",
      "label": "Heading size",
      "default": "70px"
    },
    {
      "type": "text",
      "id": "heading_size_mobile",
      "label": "Heading size (mobile)",
      "default": "27px"
    },
    {
      "type": "image_picker",
      "id": "heading_bgimg_mobile",
      "label": "Heading background image (mobile)"
    },
    {
      "type": "richtext",
      "id": "info",
      "label": "Info"
    },
    {
      "type": "text",
      "id": "info_size",
      "label": "Info size",
      "default": "26px"
    },
    {
      "type": "text",
      "id": "info_size_mobile",
      "label": "Info size (mobile)",
      "default": "14px"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (mobile)"
    }
  ],
  "presets": [
    {
      "name": "AA CP S10"
    }
  ]
}
{% endschema %}
