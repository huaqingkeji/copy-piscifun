    },
    {
      "type": "text",
      "id": "heading_size_mobile",
      "label": "Heading size (mobile)",
      "default": "27px"
    },
    {
      "type": "text",
      "id": "heading_width",
      "label": "Heading width",
      "default": "650px"
    },
    {
      "type": "text",
      "id": "heading_width_mobile",
      "label": "Heading width (mobile)",
      "default": "50%"
    },
    {
      "type": "image_picker",
      "id": "heading_bgimg",
      "label": "Heading background image"
    },
    {
      "type": "image_picker",
      "id": "heading_bgimg_mobile",
      "label": "Heading background image (mobile)"
    },
    {
      "type": "richtext",
      "id": "info",
      "label": "Info"
    },
    {
      "type": "text",
      "id": "info_size",
