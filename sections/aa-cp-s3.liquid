          "default": "26px"
        },
        {
          "type": "text",
          "id": "button_size_mobile",
          "label": "Button size (mobile)",
          "default": "14px"
        }
  ],
  "presets": [
    {
      "name": "AA CP S3"
    }
  ]
}
{% endschema %}
